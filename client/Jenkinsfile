pipeline {
    environment {
        dockerhub_credentials_id=credentials("docker-credentials-id")
    }

    agent {
        kubernetes {
            yaml '''
                apiVersion: v1
                kind: Pod
                spec:
                    securityContext:
                    runAsUser: 1000
                    containers:
                    - name: docker
                      image: docker:latest
                      env: 
                      - name: REACT_APP_API_URL
                      - value: ${REACT_APP_API_URL} 
                      resources:
                        requests:
                          memory: "100Mi"
                        limits:
                          memory: "200Mi"
                      command:
                      - cat
                      tty: true
                      volumeMounts:
                        - mountPath: /var/run/docker.sock
                          name: docker-sock
                    - name: kubectl
                      image: lachlanevenson/k8s-kubectl:v1.24.8
                      command:
                      - cat
                      tty: true

                    volumes:
                      - name: docker-sock
                        hostPath:
                          path: /var/run/docker.sock    
            '''
        }
    }

    stages {
        stage('Checkout scm') {
            steps {
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                container('docker') {
                    script {
                        docker.build("anuppoudel/library_project-frontend-local-terraform:latest", "./client")
                    }
                }
            }
        }

        stage('Push Docker Image to DockerHub') {
            steps {
                container('docker') {
                    script {
                        docker.withRegistry('https://registry.hub.docker.com', dockerhub_credentials_id) {
                            docker.image("anuppoudel/library_project-frontend-local-terraform:latest").push()
                        }
                    }
                }
            }
        }

        stage('Deploy image') {
            steps {
                container('kubectl') {
                    script {
                        sh "kubectl set image deployment/frontend-deployment frontend=anuppoudel/library_project-frontend-local-terraform:latest"
                    }
                }
            }
        }

    }

    post {
        success {
            echo 'Pipeline succeeded!'
        }
    }
}

